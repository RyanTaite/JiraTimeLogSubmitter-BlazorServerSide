{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/JiraWorklogSubmitter/JiraWorklogSubmitter/JiraWorklogSubmitter.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/JiraWorklogSubmitter/JiraWorklogSubmitter/JiraWorklogSubmitter.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/JiraWorklogSubmitter/JiraWorklogSubmitter/JiraWorklogSubmitter.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile",
            // In order for watch to work as a launch option in launch.json, we need to point it to the folder where the .csproj file is
            "options": { "cwd": "${workspaceFolder}/JiraWorklogSubmitter/JiraWorklogSubmitter/"}
        }
    ]
}